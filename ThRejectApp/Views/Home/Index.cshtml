@{
    ViewBag.Title = "Home Page";

}

<link rel="stylesheet" href="~/Content/input-form.css">

<div id="cover-layer" class="cover-layer">
    <div class="cover-container">
        <h3>Reject Number</h3>
        <h3>20010</h3>
        <div id="new-ticket" class="cta">Raise Ticket</div>
        <div class="cta">Print</div>
        <a href="@Url.Action("Tickets", "TicketGrid")" class="cta">All Tickets</a>
    </div>
</div>

@Html.Partial("~/Views/Shared/Header.cshtml")

<nav id="menu-draw">
    <a class="nav-item active-nav-item" href="@Url.Action("Index", "Home")">Raise Ticket</a>
    <a class="nav-item" href="@Url.Action("Tickets", "TicketGrid")">All Tickets</a>
</nav>
<div id="menu-burger" class="burger">
    <span class="menu-span"></span>
    <span class="menu-span"></span>
    <span class="menu-span"></span>
</div>

<main>
    <div class="container-1">
        <section class="container-2">
            <h2>Part Information</h2>
            <div class="line">
                <h3>Part Number:</h3>
                <input id="PartNo" type="text">
            </div>
            <div class="line">
                <h3>Quanty Rejected:</h3>
                <input id="QtyRejected" type="number">
            </div>
            <div class="line">
                <h3>Part Description:</h3>
                <input id="PartDescription" type="text">
            </div>
            <div class="line">
                <h3>Value (£):</h3>
                <input id="TotalValue" type="number">
            </div>
            <div class="line line--checkbox">
                <input id="ReplacementRequired" type="text">
                <h3>Replacement Needed:</h3>
                <div class="checkbox-container checkbox-container--yn">
                    <span>Yes</span>
                    <span>No</span>
                </div>
            </div>
            <div class="line">
                <h3>Manufacturing Order:</h3>
                <input id="MoNo" type="text">
            </div>
        </section>
        <section class="container-2">
            <h2>Vendor Information</h2>
            <div class="line">
                <h3>Vendor Name:</h3>
                <input id="Vendor" type="text">
            </div>
            <div class="line">
                <h3>Buyer Name:</h3>
                <input id="BuyerName" type="text">
            </div>
            <div class="line">
                <h3>Buyer Email:</h3>
                <input id="BuyerEmail" type="text">
            </div>
            <div class="line">
                <h3>Vendor Number:</h3>
                <input id="VendorNo" type="text">
            </div>

            <div class="line line--sub-container">
                <h3>Address:</h3>
                <div class="line--sub">
                    <input id="AddressLine1" type="text" placeholder="Line one">
                </div>
                <div class="line--sub">
                    <input id="AddressLine2" type="text" placeholder="Line two">
                </div>
                <div class="line--sub">
                    <input id="City" type="text" placeholder="City">
                </div>
                <div class="line--sub">
                    <input id="PostCode" type="text" placeholder="Post code">
                </div>
                <div class="line--sub">
                    <input id="CountryCode" type="text" placeholder="Country code">
                </div>
            </div>

            <!--
                            <div class="line">
                                <input type="text" placeholder="">
                            </div>
            -->
            <!--Date, Month, Number all produced mobile friendly keyboards -->

        </section>

    </div>

    <div class="container-1">
        <section class="container-2">
            <h2>Rejection Information</h2>
            <div class="line">
                <h3>Reason Code:</h3>
                <select id="ReasonCode">
                    <option value=""></option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>
            <div class="line">
                <h3>Description</h3>
                <input id="ReturnDescription" type="text">
            </div>
        </section>
        <section class="container-2">
            <h2>Employee Information</h2>
            <div class="line">
                <h3>Name:</h3>
                <input id="EmployeeName" class="textbox-width" type="text" placeholder="First name">
            </div>
            <div class="line">
                <h3>Date of Submittion:</h3>
                <input id="DateRaised" class="date-width-fix" type="date">
            </div>
        </section>
    </div>

    <div id="submit-button" class="cta">Send Form</div>

    <div class="cta" onclick="window.location.reload(true);">Force Reload</div>

</main>
<footer>
    <p>&copy; Chris Franks</p>
    <p>P14140100</p>
</footer>

<div class="hide">
    <p id="submit-link">@Url.Action("SubmitForm")</p>
</div>

<script src="~/Scripts/input-form.js"></script>